{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/servers/main/schema/config.json",
  "_comment": "Enterprise configuration with security and compliance focus",
  "mcpServers": {
    "filesystem": {
      "_description": "Controlled file system access",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${HOME}/projects"
      ]
    },
    "github": {
      "_description": "GitHub Enterprise integration",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_API_URL": "${GITHUB_ENTERPRISE_URL:-https://api.github.com}"
      }
    },
    "postgres": {
      "_description": "Enterprise database access (read-only)",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      }
    },
    "jira": {
      "_description": "Atlassian Jira integration",
      "_note": "Install: pip install mcp-atlassian",
      "command": "uvx",
      "args": ["mcp-atlassian"],
      "env": {
        "JIRA_URL": "${JIRA_URL}",
        "JIRA_USERNAME": "${JIRA_USERNAME}",
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
      }
    },
    "confluence": {
      "_description": "Atlassian Confluence integration",
      "_note": "Uses same credentials as Jira",
      "command": "uvx",
      "args": ["mcp-atlassian", "--confluence"],
      "env": {
        "CONFLUENCE_URL": "${CONFLUENCE_URL}",
        "CONFLUENCE_USERNAME": "${JIRA_USERNAME}",
        "CONFLUENCE_API_TOKEN": "${JIRA_API_TOKEN}"
      }
    },
    "slack": {
      "_description": "Slack workspace integration",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      }
    },
    "sentry": {
      "_description": "Error tracking and monitoring",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}",
        "SENTRY_ORG": "${SENTRY_ORG}"
      }
    },
    "memory": {
      "_description": "Persistent context for long-running projects",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "sequential-thinking": {
      "_description": "Structured analysis for complex decisions",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequentialthinking"]
    }
  }
}
